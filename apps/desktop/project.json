{
  "name": "desktop",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/desktop/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx-electron:build",
      "outputs": [
        "{options.outputPath}"
      ],
      "appId": "mezon.ai",
      "publish": [
        {
          "provider": "generic",
          "url": "https://cdn.mezon.vn/release/"
        }
      ],
      "mac": {
        "icon": "apps/desktop/src/assets/mac-icon.png",
        "appId": "mezon.ai",
        "target": [
          "default"
        ],
        "publish": [
          {
            "provider": "generic",
            "url": "https://cdn.mezon.vn/release/"
          }
        ]
      },
      "win": {
        "icon": "apps/desktop/src/assets/desktop-taskbar-256x256.ico",
        "target": [
          "nsis"
        ],
        "appId": "mezon.ai",
        "publish": [
          {
            "provider": "generic",
            "url": "https://cdn.mezon.vn/release/"
          }
        ]
      },
      "nsis": {
        "artifactName": "${name}-${version}-${os}-${arch}.${ext}",
        "uninstallDisplayName": "${productName}",
        "include": "scripts/installer.nsh",
        "packElevateHelper": false,
        "runAfterFinish": true,
        "createDesktopShortcut": true,
        "deleteAppDataOnUninstall": false
      },
      "msi": {
        "additionalWixArgs": [
          "-ext",
          "WixUtilExtension"
        ],
        "artifactName": "${name}-${version}-${os}-${arch}.${ext}"
      },
      "linux": {
        "category": "Utility",
        "target": "deb",
        "mimeTypes": [
          "x-scheme-handler/mezonapp"
        ],
        "desktop": {
          "exec": "mezonapp %U"
        },
        "appId": "mezon.ai"
      },
      "options": {
        "outputPath": "dist/apps/desktop",
        "main": "apps/desktop/src/main.ts",
        "tsConfig": "apps/desktop/tsconfig.app.json",
        "assets": [
          {
            "glob": "**/*",
            "input": "apps/desktop/src/assets/",
            "output": "./assets/"
          },
          {
            "glob": "**/*",
            "input": "apps/chat/src/assets/",
            "output": "./assets/"
          },
          {
            "glob": "**/*",
            "input": "libs/assets/src/assets/",
            "output": "./assets/"
          },
          {
            "glob": "apps/chat/src/assets/favicon.ico",
            "input": "./",
            "output": "./"
          },
          {
            "glob": "apps/chat/src/assets/firebase-messaging-sw.js",
            "input": "./",
            "output": "./"
          }
        ]
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false,
          "fileReplacements": [
            {
              "replace": "apps/desktop/src/environments/environment.ts",
              "with": "apps/desktop/src/environments/environment.prod.ts"
            }
          ]
        }
      }
    },
    "serve": {
      "executor": "nx-electron:execute",
      "options": {
        "buildTarget": "desktop:build"
      }
    },
    "package": {
      "executor": "nx-electron:package",
      "options": {
        "name": "desktop",
        "frontendProject": "chat",
        "sourcePath": "dist/apps",
        "outputPath": "dist/packages",
        "prepackageOnly": true,
        "mac": {
          "icon": "apps/desktop/src/assets/mac-icon.png",
          "appId": "mezon.ai",
          "target": [
            "default"
          ],
          "publish": [
            {
              "provider": "generic",
              "url": "https://cdn.mezon.vn/release/"
            }
          ]
        },
        "win": {
          "icon": "apps/desktop/src/assets/desktop-taskbar-256x256.ico",
          "target": [
            "nsis"
          ],
          "appId": "mezon.ai",
          "publish": [
            {
              "provider": "generic",
              "url": "https://cdn.mezon.vn/release/"
            }
          ]
        },
        "nsis": {
          "artifactName": "${name}-${version}-${os}-${arch}.${ext}",
          "uninstallDisplayName": "${productName}",
          "include": "scripts/installer.nsh",
          "packElevateHelper": false,
          "runAfterFinish": true,
          "createDesktopShortcut": true,
          "deleteAppDataOnUninstall": true
        },
        "msi": {
          "additionalWixArgs": [
            "-ext",
            "WixUtilExtension"
          ],
          "artifactName": "${name}-${version}-${os}-${arch}.${ext}"
        },
        "linux": {
          "category": "Utility",
          "target": "deb",
          "mimeTypes": [
            "x-scheme-handler/mezonapp"
          ],
          "desktop": {
            "exec": "mezonapp %U"
          },
          "appId": "mezon.ai",
          "artifactName": "${name}-${version}-${os}-${arch}.${ext}"
        }
      }
    },
    "make": {
      "executor": "nx-electron:make",
      "options": {
        "name": "desktop",
        "frontendProject": "chat",
        "sourcePath": "dist/apps",
        "outputPath": "dist/executables",
        "mac": {
          "icon": "apps/desktop/src/assets/mac-icon.png",
          "appId": "mezon.ai",
          "target": [
            "default"
          ],
          "hardenedRuntime": false,
          "entitlements": "apps/desktop/src/assets/entitlements.mas.plist",
          "entitlementsInherit": "./resources/mac/entitlements.mas.inherit.plist",
          "entitlementsLoginHelper": "./resources/mac/entitlements.mas.inherit.plist",
          "provisioningProfile": "./mas.provisionprofile",
          "singleArchFiles": "*",
          "publish": [
            {
              "provider": "generic",
              "url": "https://cdn.mezon.vn/release/"
            }
          ]
        },
        "win": {
          "icon": "apps/desktop/src/assets/desktop-taskbar-256x256.ico",
          "target": [
            "nsis"
          ],
          "appId": "mezon.ai",
          "publish": [
            {
              "provider": "generic",
              "url": "https://cdn.mezon.vn/release/"
            }
          ]
        },
        "nsis": {
          "artifactName": "${name}-${version}-${os}-${arch}.${ext}",
          "uninstallDisplayName": "${productName}",
          "include": "scripts/installer.nsh",
          "runAfterFinish": true,
          "createDesktopShortcut": true,
          "deleteAppDataOnUninstall": true
        },
        "msi": {
          "additionalWixArgs": [
            "-ext",
            "WixUtilExtension"
          ],
          "artifactName": "${name}-${version}-${os}-${arch}.${ext}"
        },
        "linux": {
          "category": "Utility",
          "target": "deb",
          "mimeTypes": [
            "x-scheme-handler/mezonapp"
          ],
          "desktop": {
            "exec": "mezonapp %U"
          },
          "appId": "mezon.ai",
          "artifactName": "${name}-${version}-${os}-${arch}.${ext}"
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "apps/desktop/jest.config.ts"
      }
    }
  }
}